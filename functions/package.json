        "googleapis": "^127.0.0",
        "hash-it": "^6.0.0",
        "joi": "^17.11.0",
        "lodash": "^4.17.21",
        "morgan": "^1.10.0",
        "shared": "workspace:*"
    },
    "devDependencies": {
        "@zachsents/build-workspace-deps": "^1.0.0",
        "firebase-functions-test": "^3.1.0"
    },
    "private": true,
    "type": "module"
}